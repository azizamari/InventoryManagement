 @model IEnumerable<Brand>
@{ 

}

<div>
    <h2>Brands List</h2>
    @if (Model.Count() == 0)
    {
        <h4>No Brand Found</h4>
    }
    else
    {
        <table>
            <tr>
                <th>
                    Index
                </th>
                <th>
                    Brand Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Description
                </th>
            </tr>
            @foreach (var brand in Model)
            {
                <tr>
                    <td>
                        @brand.Id
                    </td>
                    <td>
                        @brand.Name
                    </td>
                    <td>
                        @brand.Email
                    </td>
                    <td>
                        <a asp-controller="Brands" asp-action="GetBrand" asp-route-id="@brand.Id">Details</a>
                    </td>
                </tr>
            }
        </table>
    }
    <a asp-controller="Brands" asp-action="Add">Add Brand</a>
</div>